<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="TestDataBinding">

    </data>

    <LinearLayout
        android:clipChildren="false"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/home_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></FrameLayout>

        <RadioGroup
            android:elevation="20dp"
            android:id="@+id/radio_group_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp56"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bottom_tab_bar_shape">

            <com.lanxiang.icyy.tabbar.TabBarButton
                android:id="@+id/radio_button_home"
                style="@style/RadioGroupButtonStyle" />

            <com.lanxiang.icyy.tabbar.TabBarButton
                android:id="@+id/radio_button_category"
                style="@style/RadioGroupButtonStyle" />

            <com.lanxiang.icyy.tabbar.TabBarButton
                android:id="@+id/radio_button_vip"
                style="@style/RadioGroupButtonCenterStyle" />

            <com.lanxiang.icyy.tabbar.TabBarButton
                android:id="@+id/radio_button_cart"
                style="@style/RadioGroupButtonStyle" />

            <com.lanxiang.icyy.tabbar.TabBarButton
                android:id="@+id/radio_button_profile"
                style="@style/RadioGroupButtonStyle" />
        </RadioGroup>

    </LinearLayout>
</layout>