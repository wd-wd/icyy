<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RadioGroupButtonStyle">
        <!-- 这个属性是去掉button 默认样式-->
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:textColor">@color/selector_bottom_tab_text_color</item>
        <!--        <item name="android:textColor">@color/color_selector</item>-->
    </style>

    <style name="RadioGroupButtonCenterStyle">
        <!-- 这个属性是去掉button 默认样式-->
        <item name="android:button">@null</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp80</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textColor">@color/selector_bottom_tab_text_color</item>
        <!--        <item name="android:textColor">@color/color_selector</item>-->
    </style>
</resources>